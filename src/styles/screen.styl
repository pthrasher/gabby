body
  background #FFF url('/images/background.png') repeat
  color #333
  font-family "Helvetica Neue", Helvetica, sans-serif
  font-size 16px
  text-align center

#content
  margin 3em auto
  width 50%
  text-align left

@media only screen and (max-width: 1024px)
  #content
    width 94%

h1, h2, h3, h4, h5, h6
  margin 0 0 .5em

h1
  background url('/images/gabby.png') no-repeat center center
  height 106px
  margin-bottom 2em
  overflow hidden
  text-indent -9999px

h2
  padding-top 1.6em

h3, h4
  padding-top 0.8em

p
  line-height 1.6em
  margin 0 0 1em

ul
  line-height 1.6em

pre
  background #fff
  border-radius 5px
  box-shadow rgba(34,34,34,0.1) -1px -1px
  color #666
  font 12px/1.4 monaco, monospace
  overflow-x auto
  padding 1.5em 2em

p code
  background #fff
  border-radius 5px
  box-shadow rgba(34,34,34,0.1) -1px -1px
  color #666
  font 12px/1.4 monaco, monospace
  overflow-x auto
  padding .2em .5em
